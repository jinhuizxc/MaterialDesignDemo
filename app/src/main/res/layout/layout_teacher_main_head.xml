<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <RelativeLayout
        android:id="@+id/rl_teacher_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/daza_space_20"
        android:layout_marginTop="@dimen/daza_space_10">

        <ImageView
            android:id="@+id/iv_teacher_portrait"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/daza_space_17"
            android:layout_marginTop="@dimen/daza_space_9"
            android:layout_toRightOf="@+id/iv_teacher_portrait"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_teacher_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="test"
                android:textColor="@color/black"
                android:textSize="@dimen/daza_font_16" />

            <!--<com.mykj.mingyu.focus.FocusView-->
                <!--android:id="@+id/focus_view"-->
                <!--android:layout_width="56dp"-->
                <!--android:layout_height="25dp"-->
                <!--android:layout_marginLeft="@dimen/daza_space_15"-->
                <!--android:layout_marginRight="@dimen/daza_space_15" />-->

        </LinearLayout>

        <TextView
            android:id="@+id/tv_teacher_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_name"
            android:layout_marginLeft="@dimen/daza_space_17"
            android:layout_marginTop="@dimen/daza_space_8"
            android:layout_toRightOf="@+id/iv_teacher_portrait"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="test"
            android:textColor="@color/black" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/daza_space_10"
        android:layout_marginTop="@dimen/daza_space_15"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/daza_space_13"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/daza_space_8"
            android:text="自我介绍"
            android:textColor="@color/black"
            android:textSize="@dimen/daza_font_12" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_teacher_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/daza_space_18"
        android:layout_marginTop="11dp"
        android:layout_marginRight="@dimen/daza_space_18"
        android:text="test"
        android:textColor="@color/black"
        android:textSize="@dimen/daza_font_12" />


</LinearLayout>